---
import { User } from 'astro:db'
import { db } from 'astro:db'
import { getSession } from 'auth-astro/server'
import ChevronDown from './icons/ChevronDown.astro'
import { getUserByEmail } from '../utils/db'

const session = await getSession(Astro.request)

// El usuario existe?
if (
  session &&
  session.user?.email &&
  session.user?.name
) {
  const res = await getUserByEmail(session.user.email)
  
  if (
    res.success &&
    !res.data
  ) {
    await db.insert(User).values({
      email: session.user.email,
      name: session.user.name,
    })
  }
}
---

<header>
  {session
    ? (
      <div id="dropdown-menu">
        <div id="dropdown-label">
          <span>{
            session.user?.name
              ? session.user?.name.split(' ')[0]
              : ''
          }</span>
          <span id="chevron">
            <ChevronDown color="white" width="24" heigth="24" />
          </span>
        </div>
        
        <div id="dropdown-content">
          <nav>
            <ul>
              <li>
                <a href="/my-urls">
                  Ver mis URLs
                </a>
              </li>
              <li>
                <button id="logout">Logout</button>
              </li>
            </ul>
          </nav>
          
        </div>
      </div>
    )
    : (
      <button id="login">Login</button>
    )
  }
</header>

<style>
  header {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 1rem;
  }

  button {
    border: none;
    background-color: transparent;
    cursor: pointer;
  }

  #login {
    color: white;
    font-size: 1.1rem;
    font-weight: 500;
  }

  #login:hover {
    color: gray;
  }

  #dropdown-menu {
    position: relative;
  }

  #dropdown-label {
    display: flex;
    align-items: center;
    cursor: pointer;
    width: fit-content;
    gap: 0.2rem;
    color: white;
    font-size: 1.2rem;
    font-weight: 500;
  }

  #chevron {
    display: flex;
    align-items: center;
  }

  #dropdown-content {
    display: none;
    position: absolute;
    right: 0;
    background-color: white;
    color: black;
    width: 150px;
    border-radius: 3px;

    padding: 0.8rem;
  }

  #dropdown-menu:hover #dropdown-content {
    display: block;
  }

  ul {
    list-style: none;
  }

  a {
    text-decoration: none;
    color: black;
  }

  a,
  button {
    font-size: 1.2rem;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-weight: 500;
  }

  a:hover,
  button:hover {
    color: gray;
  }
</style>

<script>
  const { signIn, signOut } = await import("auth-astro/client")
  
  const login = document.querySelector("#login") as HTMLButtonElement

  if (login) {
    login.onclick = () => signIn("google")
  }

  const logout = document.querySelector("#logout") as HTMLButtonElement

  if (logout) {
    logout.onclick = () => signOut()
  }
</script>